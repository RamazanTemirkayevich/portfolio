mixin skills()
    <section class="">
        <div class="">
            <div class="skills">
                <h2 class="container">Skills</h2>
                <ul class="skills-list">
                    +skills-list-item('html', 'HTML5(Pug)', 'Is the standard markup language for documents designed to be displayed in a web browser.')
                    +skills-list-item('css', 'CSS(Sass)', 'Is a style sheet language used for specifying the presentation and styling of a document written in a markup language such as HTML or XML (including XML dialects such as SVG, MathML or XHTML).')
                    +skills-list-item('js', 'JavaScript(AJAX, etc.)', 'Is a programming language that is one of the core technologies of the World Wide Web, alongside HTML and CSS.')
                    +skills-list-item('git', 'Git', 'is a distributed version control system that tracks changes in any set of computer files, usually used for coordinating work among programmers who are collaboratively developing source code during software development.')
                    +skills-list-item('vue', 'Vue.js', 'is an open-source model–view–viewmodel front end JavaScript library for building user interfaces and single-page applications. It was created by Evan You, and is maintained by him and the rest of the active core team members.')
                </ul>
            </div>
        </div>
    </section>

mixin skills-list-item(skillsIco='', skillsTitle='', skillsInfo='')
    <li class="skills-list__item">
        <div class="skills-list__info">
            img(src=`./icons/${skillsIco}.svg`, alt="")
            span= skillsTitle
            p(class="t-crop t-crop__five")= skillsInfo
        </div>
        <a href="/" class="skills-list__path">
            span Learn More
            +icon('arrow')
        </a>
    </li>